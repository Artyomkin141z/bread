{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "onenews",
    "pluralName": "news",
    "displayName": "Новости"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 3
    },
    "kategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "news"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "titleImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
